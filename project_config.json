{
  "project": {
    "name": "Class Flow",
    "version": "1.0.0",
    "description": "School Timetable Management System - Base Product",
    "build_date": "2025-08-10",
    "python_version": "3.11.4"
  },
  "features": {
    "core": {
      "timetable_management": true,
      "auto_assign": true,
      "teacher_leave": true,
      "export_excel": true,
      "export_pdf": true,
      "smart_match": true
    },
    "future": {
      "license_system": false,
      "admin_screen": false,
      "mobile_contacts": false,
      "custom_branding": false,
      "cloud_sync": false,
      "multi_language": false
    }
  },
  "client_customization": {
    "branding": {
      "app_name": "Class Flow",
      "logo_path": "",
      "primary_color": "#2d6cdf",
      "secondary_color": "#ffe082"
    },
    "license": {
      "trial_days": 30,
      "activation_required": false,
      "license_server": ""
    },
    "contact_management": {
      "enabled": false,
      "fields": ["name", "email", "mobile", "emergency_contact"]
    }
  },
  "database": {
    "type": "sqlite",
    "file": "timetable.db",
    "backup_enabled": false
  },
  "export": {
    "excel_enabled": true,
    "pdf_enabled": true,
    "formats": ["xlsx", "pdf"]
  }
}
